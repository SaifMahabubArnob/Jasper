            font-size: 18px;
            color: #d9534f;
            font-weight: bold;
        }

        .card .actions {
            flex: 1;
            text-align: center;
        }

        .card .actions button {
            background-color: #d9534f;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px 15px;
            cursor: pointer;
            font-size: 14px;
        }

        .card .actions button:hover {
            background-color: #c9302c;
        }

        .card .actions a {
            display: block;
            margin-top: 10px;
            font-size: 12px;
            color: #d9534f;
